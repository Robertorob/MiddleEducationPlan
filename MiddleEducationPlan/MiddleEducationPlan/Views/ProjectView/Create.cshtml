@model MiddleEducationPlan.BusinessLogic.Models.Project.AddProjectModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h1>Create</h1>

<h4>Project</h4>

<div class="row">
    <table class="table">
        <thead>
        </thead>
        <tbody>
            <tr>
                <td>
                    <lable class="col-form-label">Name</lable>
                </td>
                <td>
                    <input type="text" id="projectName" class="form-control" />
                </td>
            </tr>
            <tr>
                <td>
                    <lable class="col-form-label">Description</lable>
                </td>
                <td>
                    <input type="text" id="projectDescription" class="form-control" />
